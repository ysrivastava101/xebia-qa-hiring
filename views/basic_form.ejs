<% include includes/header.ejs %>

	<section class="container jumbotron">
		<div class="container">
			<h4 class="text-center">
				<u>Basic Form</u>
			</h4>
			<code>Please fill the form. All fields are mandatory</code>
			<form id="basicForm" class="form-horizontal">
				<div class="form-group">
					<label class="control-label" for="firstname">First Name</label>
					<input type="text" class="form-control" name="firstname" required>
				</div>
				<div class="form-group">
					<label class="control-label" for="lastname">Last Name</label>
					<input type="text" class="form-control" name="lastname" required>
				</div>
				<div class="form-group">
					<label class="control-label" for="carselect">My Car</label>
					<select class="form-control" name="carselect" required>
						<option value="volvo">Volvo</option>
	          <option value="saab">Saab</option>
	          <option value="mercedes">Mercedes</option>
	          <option value="audi">Audi</option>
					</select>
				</div>
				<div class="form-group">
					<label class="control-label"><input type="checkbox" required> I have a bike</label>
				</div>
				<button type="submit" name="button" class="btn btn-lg continueBtn xebiaTheme">Continue</button>
			</form>
		</div>
	</section>

	<% include includes/footer.ejs %>