<% include includes/header.ejs %>

<section class="container text-center jumbotron">
	<h4>Coding logic test 2</h4>
	<div class="form-group">
		<input type="text" name="givenInput" id="givenInput" class="form-control" disabled>
	</div>
	<div class="form-group">
		<input type="text" name="calculatedOutput" id="calculatedOutput" class="form-control">
	</div>
	<div class="form-group has-error">
		<span class="help-block hide">Numbers not arranged properly</span>
	</div>
	<button type="button" name="button" class="btn btn-lg continueBtn xebiaTheme" onclick="checkSorted()">Continue</button>
</section>
<script type="text/javascript">
	max=20,min=10;
	number='';
	var random = Math.floor(Math.random() * (max - min) + min);
	var arr = new Array(random);
	for(var i=0;i<arr.length;i++){
		number = number+(parseInt((Math.floor(Math.random() * 10)).toString(2)));
	}
	document.getElementById('givenInput').value = number;
	function arrange() {
		return number.split('').sort().join('');
	}
	arrange();
	function checkSorted(){
		var sorted = arrange();
		var calculatedOutput = document.getElementById('calculatedOutput').value;
		if(calculatedOutput == sorted){
			next();
		}
		else{
			$('.help-block').removeClass('hide');
		}
	}
</script>

